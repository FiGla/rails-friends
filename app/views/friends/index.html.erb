<h1>Friends List</h1>
<% if @friends%>
  <table class="table table-striped table-hover table-bordered" id="friends">
    <thead>
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%=friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to "Show", friend, class:"btn btn-link" %></td>
          <td><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-link" %></td>
          <td> <%= button_to "Destroy", friend, method: :delete, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Add new friend", new_friend_path, class:"btn btn-success" %>